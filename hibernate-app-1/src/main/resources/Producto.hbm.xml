<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.cst.hibernate.app.model.Producto" table="productos">
        <id name="idProducto" column="idproducto">
            <generator class="native"/>
        </id>
        <property name="nombre" column="nombre"/>
        <property name="precio" column="precio"/>
        <property name="existencias" column="existencias"/>
        <property name="categoria" column="categoria"/>
    </class>
</hibernate-mapping>